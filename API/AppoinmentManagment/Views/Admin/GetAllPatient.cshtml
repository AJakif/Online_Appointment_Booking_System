
@{
    ViewData["Title"] = "GetAllPatient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-primary">-Patient List-</h1>
<div class="row">
    <div class="backgroundWhite col-lg">
        <a asp-route="AddPatient" class="btn btn-primary float-right" style="color:white">Add Patient <i class="fas fa-plus"></i></a>
    </div>
</div>
<br />
<div class="border backgroundWhite col-lg">
    <br />
    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="th-sm text-center">Name</th>
                <th class="th-sm text-center">Phone</th>
                <th class="th-sm text-center">Address</th>
                <th class="th-sm text-center">Date of Birth</th>
                <th class="th-sm text-center">Action</th>
            </tr>
        </thead>
        <tbody id="tableData">
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/PatientList.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

