
@{
    ViewData["Title"] = "Doctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">-Doctors-</h1>
<hr />
<div class="row">
    <div class="backgroundWhite col-lg">
        <a asp-route="AddDoctor" class="btn btn-primary float-right" style="color:white">Add Doctor <i class="fas fa-plus" ></i></a>
    </div>
</div>
<br />
<div class="row">
    <div class="border backgroundWhite col-lg">
        <br />
        <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="th-sm text-center">Doctor ID</th>
                    <th class="th-sm text-center">Name</th>
                    <th class="th-sm text-center">Specialization</th>
                    <th class="th-sm text-center">Phone</th>
                    <th class="th-sm text-center">Address</th>
                    <th class="th-sm text-center">Join Date</th>
                    <th class="th-sm text-center">Fee</th>
                    <th class="th-sm text-center">Action</th>
                </tr>
            </thead>
            <tbody id="tableData">
            </tbody>
        </table>
    </div>
</div>

